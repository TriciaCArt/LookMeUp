@using LookMeUp.Services
@using LookMeUp.Services.Interfaces

@model LookMeUp.Models.Contact

@inject IImageService ImageService

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <h4>Contact</h4>
    <hr />
    <div class="col">
            <div class="glass-cf-style darkGlass">
                <div class="row g-0">
                    <div class="col-md-5 m-0 p-0 text-center">
                        <figure>
                            <img src='@ImageService.ConvertByteArrayToFile(Model.ImageData, Model.ImageType)' class="img-fluid img-thumbnail m-3" style="height: 10rem;">
                            <figcaption>
                                <span class="card-title fs-5">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</span>
                            </figcaption>
                        </figure>               
                    </div>
                    <div class="col-md-7 text-center text-md-start">
                        <div class="card-body darkGlass">
                            <div class="card-text fs-5 fw-bold">
                                Address
                            </div>
                            <div class="card-text fs-5">
                                @Html.DisplayFor(model => model.Address1)
                            </div>
                            <div class="card-text fs-5 mb-2">
                                @Html.DisplayFor(model => model.City), 
                                @Html.DisplayFor(model => model.State) 
                                @Html.DisplayFor(model => model.ZipCode)
                            </div>
                            
                            <div class="card-text fs-5">
                                <span class="fw-bold me-2">Email:</span>@Html.DisplayFor(model => model.Email)
                            </div>
                            <div class="card-text fs-5 mb-3">
                                 <span class="fw-bold me-2">Phone:</span>@Html.DisplayFor(model => model.PhoneNumber)
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
